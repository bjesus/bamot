%div.span-24
  .span-6.last(style="float: right;")
    %h2= @kind.name
    %h3= @kind.description
    .moreover
      :textile
        #{@kind.content}
  - @kind.creations.each do |creation|
    %div.span-6.space
      %h3(class="farline")
        =link_to(creation.name, "/creations/"+creation.friendly_id+"?context=kind")
        %sub!= creation.user.display_name
      %p
        - if creation.image?
          =link_to(image_tag(creation.image.url(:medium), {'style'=>'-webkit-box-shadow: black 0px 0px 1px;'}), "/creations/"+creation.friendly_id+"?context=kind")
        :textile
          #{creation.summary}
